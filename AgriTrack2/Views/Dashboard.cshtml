@if (User.IsInRole("Farmer"))
{
    <h2>Farmer Dashboard</h2>
    <a asp-controller="Farmer" asp-action="Index">Manage Crops</a>
}
else if (User.IsInRole("Employee"))
{
    <h2>Employee Dashboard</h2>
    <a asp-controller="Employee" asp-action="Index">View Tasks</a>
}
else
{
    <h2>Welcome to AgriTrack</h2>
}